.page-header
  %h1 
    Sign In

%br/
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          
  = f.label :email
  = f.email_field :email

  = f.label :password
  = f.password_field :password

  - if devise_mapping.rememberable?
    %br/
    %br/
    = f.check_box :remember_me
    Remember me
    %br/
  %br/
  = f.submit "Sign in", :class => 'btn-primary btn-large'

= render "links"