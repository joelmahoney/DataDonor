= form_for @auth_client do |f|
  -if @auth_client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@auth_client.errors.count, "error")} prohibited this auth_client from being saved:"
      %ul
        - @auth_client.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :app_key
    = f.text_field :app_key
  .field
    = f.label :app_secret
    = f.text_field :app_secret
  .actions
    = f.submit 'Save'
