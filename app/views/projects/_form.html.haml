= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "Project Name"
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description, :rows => 10
  .field
    = f.label :organization_id
    = f.select :organization_id, options_from_collection_for_select(@organizations, :id, :name)
  .field
    = f.label :start_date, "Project Start Date"
    = f.date_select :start_date, :order => [:month, :day, :year]
  .field
    = f.label :location
    = f.text_field :location, :placeholder => 'Boston, MA'
  .actions
    %br/
    = f.submit 'Save', :class => 'btn-primary btn-large'
